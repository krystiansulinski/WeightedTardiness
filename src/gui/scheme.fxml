<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane fx:controller="gui.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER_LEFT" hgap="10" vgap="10"
          styleClass="root">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Text id="welcome-text" text="Weighted Tardiness"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="instances"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="instances"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>


    <Label text="jobs:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="jobs"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>


    <Label text="processingTime range:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="processingTimeRange"
            GridPane.columnIndex="1" GridPane.rowIndex="3"/>


    <Label text="weight range:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <TextField fx:id="weightRange"
            GridPane.columnIndex="1" GridPane.rowIndex="4"/>


    <Label text="number of files"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <TextField fx:id="numberOfFiles"
            GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button text="Run"
                onAction="#handleRunButtonAction"/>
    </HBox>

    <!--<LineChart fx:id="lineChart" height="100" width="100"-->
            <!--GridPane.columnIndex="2" GridPane.rowIndex="0"-->
            <!--GridPane.columnSpan="2"/>-->

    <stylesheets>
        <URL value="@Scheme.css" />
    </stylesheets>

</GridPane>